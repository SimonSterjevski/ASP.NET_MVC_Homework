@model FeedbackViewModel

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Feedback" asp-action="AddFeedback" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Email"class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" maxlength="100" required> Enter comments </textarea> 
            </div>
            <button type="submit" class="btn btn-primary"> Commit feedback </button>
        </form>

        <a asp-controller="Feedback" asp-action="Index"> See all feedback </a>
    </div>
</div>